{
  "name": "work-clock",
  "displayName": "Work Clock",
  "description": "Display percent clock for one workday.",
  "version": "1.1.1",
  "publisher": "HelloFitz",
  "keywords": ["vscode", "work", "clock", "percent", "process"],
  "icon": "images/icon.png",
  "author": {
    "name": "Fitz",
    "email": "ifibercc@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ifibercc/workClock.git"
  },
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
        "type": "object",
        "title": "WorkClock",
        "properties": {
          "workClock.displaySymbol": {
            "type": "string",
            "default": "circle",
            "description": "进度展示符号",
            "enum": ["circle", "mahjong"],
            "enumDescriptions": ["圆形", "麻将"]
          },
          "workClock.startTime": {
            "type": "string",
            "default": "09:00",
            "description": "上班时间"
          },
          "workClock.endTime": {
            "type": "string",
            "default": "18:00",
            "description": "下班时间"
          },
          "workClock.position": {
            "type": "string",
            "default": "right",
            "description": "时钟位置",
            "enum": ["left", "right"],
            "enumDescriptions": ["左侧", "右侧"]
          },
          "workClock.priority": {
            "type": "number",
            "default": 100,
            "description": "位置权重"
          }
        }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "moment": "^2.27.0"
  }
}
